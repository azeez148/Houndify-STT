<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.gabrieljimenez.houndifystt.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready." android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:id="@+id/statusTextView"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@+id/Recordbutton"
            android:layout_centerHorizontal="true" android:layout_marginTop="43dp" android:id="@+id/resultList"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/Recordbutton"
            android:layout_centerHorizontal="true" android:layout_marginTop="17dp" android:id="@+id/selectedText"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textSize="24sp"
    />
    <Button
            android:text="Start Recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp" android:id="@+id/Recordbutton"
            android:layout_below="@+id/statusTextView" android:layout_centerHorizontal="true"/>
</RelativeLayout>
